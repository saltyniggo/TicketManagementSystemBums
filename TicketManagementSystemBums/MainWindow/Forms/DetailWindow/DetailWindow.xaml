<Window x:Class="TicketManagementSystemBums.MainWindow.Forms.DetailWindow.DetailWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketManagementSystemBums.MainWindow.Forms.DetailWindow"
        mc:Ignorable="d"
        Title="DetailWindow" Height="350" Width="600"
        WindowStyle="None"
        AllowsTransparency="true"
        MouseDown="Window_MouseDown">

    <Window.FontFamily>
        <FontFamily>Montserrat</FontFamily>
    </Window.FontFamily>
    <Window.Background>
        <SolidColorBrush Color="#fefefe"/>
    </Window.Background>
    <Border BorderBrush="#00204F"
            BorderThickness="2">
        <Frame x:Name="MainFrame" 
       NavigationUIVisibility="Hidden"/>
    </Border>
</Window>
